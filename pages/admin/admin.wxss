.container {
  padding: 40rpx;
  background-color: #f2f2f2;
  min-height: 100vh;
  box-sizing: border-box;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.form-item input,
.form-item textarea {
  width: 100%;
  border: 1rpx solid #dcdcdc;
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 26rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
}

.form-item textarea {
  height: 120rpx;
  resize: none;
}

.category-btn {
  width: 100%;
  text-align: left;
  padding: 12rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #dcdcdc;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.upload-btn {
  display: block;
  width: 100%;
  background-color: #03a9f4;
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  padding: 12rpx 0;
  box-sizing: border-box;
}

.save-btn {
  width: 100%;
  background-color: #4caf50;
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  padding: 14rpx 0;
}

.manage-btn {
  width: 100%;
  background-color: #03a9f4;
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  padding: 14rpx 0;
}
