/* 整体容器 */
.container {
  display: flex;
  flex-direction: row;
  height: 100vh;
  background-color: #f9f9f9;
}

/* 左侧分类栏 */
.category-bar {
  width: 220rpx;
  background-color: #ffffff;
  border-right: 1rpx solid #e0e0e0;
  padding: 20rpx;
  box-sizing: border-box;
}

.category-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.category-list {
  margin-bottom: 16rpx;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  padding: 8rpx 10rpx;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.category-item text {
  color: #555;
}

.delete-btn {
  background-color: #f44336;
  color: #fff;
  font-size: 20rpx;
  border-radius: 6rpx;
  padding: 2rpx 6rpx;
}

/* 分类输入和新增 */
.add-category {
  display: flex;
  margin-top: 10rpx;
  gap: 8rpx;
}

.add-category input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 6rpx;
  font-size: 22rpx;
  background-color: #fff;
}

.add-btn {
  background-color: #03a9f4;
  color: #fff;
  border-radius: 6rpx;
  font-size: 22rpx;
}

/* 右侧菜品列表区域 */
.dish-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #03a9f4;
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

/* 菜品列表样式 */
.dish-item {
  display: flex;
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  width: 150rpx;
  height: 150rpx;
  object-fit: cover;
  border-right: 1rpx solid #eee;
}

.dish-info {
  flex: 1;
  padding: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.dish-desc {
  font-size: 22rpx;
  color: #777;
  margin-bottom: 4rpx;
}

.btn-group {
  margin-top: 8rpx;
}

.edit-btn {
  background-color: #4caf50;
  color: #fff;
  border-radius: 6rpx;
  margin-right: 8rpx;
  font-size: 20rpx;
}

.delete-btn {
  background-color: #f44336;
  color: #fff;
  border-radius: 6rpx;
  font-size: 20rpx;
}
