  <view class="title">我的伴侣</view>
  <view>当前伴侣 openid: {{partnerOpenId || '未绑定'}}</view>

  <input placeholder="输入伴侣 openid" bindinput="onInput" value="{{inputOpenId}}" />
  <view class="btn-group">
    <button bindtap="bindPartner">绑定</button>
    <button bindtap="unbindPartner">解绑</button>
  </view>
</view>
